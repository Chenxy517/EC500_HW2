<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitleLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Location"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitleLocation"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLocation"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edtFontSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSpeed"
        android:hint="Input Font Size" />


    <Button
        android:id="@+id/btnChangeSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtFontSize"
        android:layout_marginTop="10dp"
        android:text="Change Font Size" />

    <Button
        android:id="@+id/btnUnit"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnChangeSize"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="unit change" />

    <Button
        android:id="@+id/btnPause"
        android:layout_width="141dp"
        android:layout_height="67dp"
        android:layout_below="@id/btnUnit"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:text="Pause/Resume" />

    <Button
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_below="@id/btnUnit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="132dp"
        android:text="Simulate" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="263dp"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="33dp"
        android:insetTop="6dp"
        android:padding="5dp"
        android:text="Help" />

</RelativeLayout>


